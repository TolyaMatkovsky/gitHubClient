<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/webviewRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blindColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:id="@+id/git_name_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:textSize="45sp"
            android:textColor="@color/toolbarTitleColor"
            android:text="Git"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/git_name_1"
            android:layout_marginLeft="200dp"
            android:textSize="45sp"
            android:textColor="@color/toolbarTitleColor"
            android:text="Hub"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login_circle"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textSize="45sp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Client"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="80dp"/>
    </RelativeLayout>

    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/blind_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:visibility="gone">
        <TextView
            android:id="@+id/git_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:textSize="45sp"
            android:textColor="@color/toolbarTitleColor"
            android:text="Git"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/git_name"
            android:layout_marginLeft="200dp"
            android:textSize="45sp"
            android:textColor="@color/toolbarTitleColor"
            android:text="Hub"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login_circle"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textSize="45sp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Client"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="80dp"/>
    </RelativeLayout>

    <View
        style="@style/root"
        android:id="@+id/blind_view"
        android:visibility="gone"
        android:background="#00000000"/>

    <ProgressBar
        android:layout_width="@dimen/progressBarSize"
        android:layout_height="@dimen/progressBarSize"
        android:id="@+id/progressbar_black"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        style="?android:attr/progressBarStyleLarge"
        android:indeterminateDrawable="@drawable/progress_black"
        android:visibility="gone"/>
</RelativeLayout>