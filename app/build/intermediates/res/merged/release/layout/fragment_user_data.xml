<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    style="@style/root">

    <LinearLayout
        style="@style/root"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/user_photo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="28dp" />
            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginRight="16dp"
                android:text="@string/resultsName"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:gravity="center"
                android:maxLength="25"
                android:maxLines="1"
                android:layout_toRightOf="@+id/user_photo"/>
            <RelativeLayout
                android:id="@+id/row1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/name"
                android:layout_toRightOf="@+id/user_photo"
                android:layout_marginTop="2dp"
                android:layout_marginRight="12dp">
                <TextView
                    android:id="@+id/followers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:text="@string/resultsFollowers"/>
                <TextView
                    android:id="@+id/results_followers_count"
                    android:layout_width="28dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/results_image_bg"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/row2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/row1"
                android:layout_toRightOf="@+id/user_photo"
                android:layout_marginTop="2dp"
                android:layout_marginRight="12dp">
                <TextView
                    android:id="@+id/following"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:text="@string/resultsFollowing"/>
                <TextView
                    android:id="@+id/results_following_count"
                    android:layout_width="28dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/results_image_bg"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/row3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/row2"
                android:layout_toRightOf="@+id/user_photo"
                android:layout_marginTop="2dp"
                android:layout_marginRight="12dp">
                <TextView
                    android:id="@+id/gists"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:text="@string/resultsGists"/>
                <TextView
                    android:id="@+id/results_gists"
                    android:layout_width="28dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/results_image_bg"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/row4"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/row3"
                android:layout_toRightOf="@+id/user_photo"
                android:layout_marginTop="2dp"
                android:layout_marginRight="12dp">
                <TextView
                    android:id="@+id/repos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:text="@string/resultsRepos"/>
                <TextView
                    android:id="@+id/results_repos"
                    android:layout_width="28dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/results_image_bg"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text="@string/resultsReposList"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"/>
            <LinearLayout
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:background="@drawable/circle"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/results_recycle_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical">

            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>