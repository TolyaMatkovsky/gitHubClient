<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="70dp">


    <LinearLayout
        style="@style/root"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="26dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/repos_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_medium"
                    android:maxLines="2"
                    android:maxLength="20"
                    android:text="Repositoty title 1"/>
                <TextView
                    android:id="@+id/language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_medium"
                    android:maxLines="1"
                    android:maxLength="22"
                    android:text="Language"/>
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image_flow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/flow"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/force_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="13sp"
                android:text="count"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/image_flow"/>
            <ImageView
                android:id="@+id/image_star"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="80dp"
                android:background="@drawable/star"
                android:layout_centerVertical="true" />
            <TextView
                android:id="@+id/star_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="13sp"
                android:text="count"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/image_star"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>